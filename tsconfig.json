{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "Node16",
		"allowImportingTsExtensions": true,
		"rewriteRelativeImportExtensions": true,
		"verbatimModuleSyntax": true,
		"strict": true,
		"skipLibCheck": true,
		"rootDir": "src",
		"outDir": "dist",
		"declaration": true
	},
	"include": ["src"],
}
